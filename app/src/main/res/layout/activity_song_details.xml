<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 🎶 Titre -->
        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🎶 Titre de la chanson"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:background="@drawable/rounded_bg"
            android:gravity="center"
            android:paddingBottom="16dp" />

        <!-- Séparateur -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#DDDDDD"
            android:layout_marginBottom="16dp" />

        <!-- Genre & Tonalité -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/rounded_bg"
            android:elevation="2dp">

            <TextView
                android:id="@+id/genreTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🎼 Genre"
                android:textSize="18sp"
                android:textColor="#444"
                android:paddingBottom="8dp" />

            <TextView
                android:id="@+id/tonaliteTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🔑 Tonalité"
                android:textSize="18sp"
                android:textColor="#444" />
        </LinearLayout>

        <!-- Musiciens -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🎵 Musiciens"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="12dp" />

        <!-- Bloc des musiciens -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/rounded_bg">

            <TextView
                android:id="@+id/batterieTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🥁 Batterie"
                android:textSize="18sp"
                android:textColor="#555"
                android:paddingBottom="10dp" />

            <TextView
                android:id="@+id/bassTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🎸 Basse"
                android:textSize="18sp"
                android:textColor="#555"
                android:paddingBottom="10dp" />

            <TextView
                android:id="@+id/soloTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🎸 Solo"
                android:textSize="18sp"
                android:textColor="#555"
                android:paddingBottom="10dp" />

            <TextView
                android:id="@+id/clavier1TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🎹 Clavier 1"
                android:textSize="18sp"
                android:textColor="#555"
                android:paddingBottom="10dp" />

            <TextView
                android:id="@+id/clavier2TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🎹 Clavier 2"
                android:textSize="18sp"
                android:textColor="#555" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
